    <body id="page-top">
        <!-- Navigation-->

        <%- include('partials/nav')%>




    <div style="z-index: 12; 
        display: block;
        text-align: right;
        background-color: #333a40;
        margin-right:auto;
        padding-right: 20px;
        color: white;
        width: 75%;
        height: 375px;
        margin-top: 25px;
        padding-top: 25px;
        margin-left: auto;
        right: 0px;
        border-radius: 10px;
        padding: 11px;
        font-size: 12px;">
        <form method="POST" action="/submit-form">
            <div style=" width: 500px;">
                <label for="first-name">First Name:</label>
                <input style="margin: 2px;" type="text" id="first-name" name="firstName" required pattern="[A-Za-z]{1,}" />
            
                <label for="last-name">Last Name:</label>
                <input style="margin: 2px;" type="text" id="last-name" name="lastName" required pattern="[A-Za-z]{1,}" />
            </div>

            <div style=" width: 100%; margin: 10px;">
                <label for="address">Address:</label>
                <input style="margin: 2px;" type="text" id="address" name="address" required />
            
                <label for="city">City:</label>
                <input style="margin: 2px;" type="text" id="city" name="city" required pattern="[A-Za-z]{1,}" />

                <label for="state">State:</label>
                <input style="margin: 2px;" type="text" id="state" name="state" required pattern="[A-Za-z]{2}" />

                <label for="zip">Zip:</label>
                <input style="margin: 2px;" type="text" id="zip" name="zip" required pattern="[0-9]{5}" />
            </div>
            <div style=" width: 100%;">
                <label for="age">Age:</label>
                <select style="margin: 2px;" id="age" name="age" required>
                    <option value="">--Select Age--</option>
                    <option value="18-24">18-24</option>
                    <option value="25-34">25-34</option>
                    <option value="35-44">35-44</option>
                    <option value="45-54">45-54</option>
                    <option value="55-64">55-64</option>
                    <option value="65+">65+</option>
                </select>
            </div>
            <div style=" width: 100%;">
                <label for="gender">Gender:</label>
                <div>
                    <input style="margin: 2px;" type="radio" id="male" name="gender" value="male" required />
                    <label for="male">Male</label>
                </div>
                <div>
                    <input style="margin: 2px;" type="radio" id="female" name="gender" value="female" required />
                    <label for="female">Female</label>
                </div>

                <label for="consent">Consent:</label>
                <div>
                    <input style="margin: 2px;" type="checkbox" id="consent" name="consent" required />
                    <label for="consent">I consent to the processing of my personal data</label>
                </div>
            </div>
            <label style=" float: left;" for="bio">Bio:</label>
            <textarea style="margin: 2px; width: 100%" id="bio" name="bio" required></textarea>

            <button style="margin: 5px; background-color: orange; display: block; float: right;" type="submit">Submit</button>
        </form>
    </div>



<footer class="footer py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 text-lg-start">Copyright &copy; Your Website 2022</div>
            <div class="col-lg-4 my-3 my-lg-0">
                <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a class="link-dark text-decoration-none me-3" href="#!">Privacy Policy</a>
                <a class="link-dark text-decoration-none" href="#!">Terms of Use</a>
            </div>
        </div>
    </div>
</footer>

